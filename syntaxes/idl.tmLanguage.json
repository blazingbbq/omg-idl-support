{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "IDL",
	"patterns": [
		{
			"include": "#preprocessor"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#annotations"
		},
		{
			"include": "#type_declarations"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#boolean_literal"
		},
		{
			"include": "#literals"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#scoped_name"
		},
		{
			"include": "#identifier"
		}
	],
	"repository": {
		"type_declarations": {
			"patterns": [
				{
					"match": "\\b(struct)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": {
							"name": "keyword.declaration.struct"
						},
						"2": {
							"name": "entity.name.type.struct"
						}
					}
				},
				{
					"match": "\\b(union)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": {
							"name": "keyword.declaration.union"
						},
						"2": {
							"name": "entity.name.type.union"
						}
					}
				},
				{
					"match": "\\b(enum)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": {
							"name": "keyword.declaration.enum"
						},
						"2": {
							"name": "entity.name.type.enum"
						}
					}
				},
				{
					"match": "\\b(bitmask)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": {
							"name": "keyword.declaration"
						},
						"2": {
							"name": "entity.name.type.bitmask"
						}
					}
				},
				{
					"match": "\\b(bitset)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": {
							"name": "keyword.declaration"
						},
						"2": {
							"name": "entity.name.type.bitset"
						}
					}
				},
				{
					"match": "\\b(interface)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": {
							"name": "keyword.declaration.interface"
						},
						"2": {
							"name": "entity.name.type.interface"
						}
					}
				},
				{
					"match": "\\b(module)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": {
							"name": "keyword.declaration.namespace"
						},
						"2": {
							"name": "entity.name.namespace"
						}
					}
				}
			]
		},
		"preprocessor": {
			"patterns": [
				{
					"name": "meta.preprocessor.include.idl",
					"begin": "^\\s*(#\\s*include)\\s*",
					"beginCaptures": {
						"1": {
							"name": "keyword.control.directive.include"
						}
					},
					"end": "$",
					"patterns": [
						{
							"name": "string.quoted.double.include",
							"match": "\"[^\"]*\""
						},
						{
							"name": "string.quoted.other.lt-gt.include",
							"match": "<[^>]*>"
						}
					]
				},
				{
					"name": "meta.preprocessor.macro.idl",
					"match": "^\\s*(#)\\s*(define|undef|ifdef|ifndef|if|elif|else|endif|pragma)\\b",
					"captures": {
						"1": {
							"name": "punctuation.definition.directive"
						},
						"2": {
							"name": "keyword.control.directive"
						}
					}
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash",
					"match": "//.*$"
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"annotations": {
			"patterns": [
				{
					"name": "meta.decorator",
					"begin": "@(id|autoid|optional|extensibility|final|appendable|mutable|position|value|key|must_understand|default_literal|default|range|min|max|unit|bit_bound|external|nested|verbatim|service|oneway|ami|non_serialized)\\b",
					"beginCaptures": {
						"0": {
							"name": "entity.name.function.decorator"
						}
					},
					"end": "(?<=\\))|(?=[;{])|$",
					"patterns": [
						{
							"begin": "\\(",
							"end": "\\)",
							"patterns": [
								{
									"include": "#identifier"
								},
								{
									"include": "#literals"
								},
								{
									"name": "punctuation.separator",
									"match": ","
								}
							]
						}
					]
				},
				{
					"name": "meta.decorator",
					"begin": "@([a-zA-Z_][a-zA-Z0-9_]*)",
					"beginCaptures": {
						"0": {
							"name": "entity.name.function.decorator"
						}
					},
					"end": "(?<=\\))|(?=[;{])|$",
					"patterns": [
						{
							"begin": "\\(",
							"end": "\\)",
							"patterns": [
								{
									"include": "#identifier"
								},
								{
									"include": "#literals"
								},
								{
									"name": "punctuation.separator",
									"match": ","
								}
							]
						}
					]
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"include": "#declaration_keywords"
				},
				{
					"include": "#type_keywords"
				}
			]
		},
		"declaration_keywords": {
			"patterns": [
				{
					"name": "keyword.declaration.struct",
					"match": "\\b(struct)\\b"
				},
				{
					"name": "keyword.declaration.enum",
					"match": "\\b(enum)\\b"
				},
				{
					"name": "keyword.declaration.interface",
					"match": "\\b(interface)\\b"
				},
				{
					"name": "keyword.declaration.union",
					"match": "\\b(union)\\b"
				},
				{
					"name": "keyword.declaration.namespace",
					"match": "\\b(module)\\b"
				},
				{
					"name": "keyword.declaration",
					"match": "\\b(abstract|alias|attribute|bitfield|bitmask|bitset|case|component|connector|const|consumes|context|custom|default|emits|eventtype|exception|factory|finder|getraises|home|import|in|inout|local|manages|map|mirrorport|multiple|native|oneway|out|primarykey|private|port|porttype|provides|public|publishes|raises|readonly|setraises|supports|switch|truncatable|typedef|typeid|typename|typeprefix|uses|valuetype|void)\\b"
				}
			]
		},
		"type_keywords": {
			"name": "support.type.primitive",
			"match": "\\b(any|boolean|char|double|fixed|float|int8|int16|int32|int64|long|Object|octet|sequence|short|string|uint8|uint16|uint32|uint64|unsigned|ValueBase|wchar|wstring)\\b"
		},
		"boolean_literal": {
			"name": "constant.language.boolean",
			"match": "\\b(TRUE|FALSE)\\b"
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.bitwise",
					"match": "<<|>>|&|\\||\\^|~"
				},
				{
					"name": "keyword.operator.arithmetic",
					"match": "\\+|-|\\*|/|%"
				},
				{
					"name": "keyword.operator.assignment",
					"match": "="
				}
			]
		},
		"scoped_name": {
			"name": "entity.name.type",
			"match": "::?[a-zA-Z_][a-zA-Z0-9_]*((::[a-zA-Z_][a-zA-Z0-9_]*)+)?"
		},
		"literals": {
			"patterns": [
				{
					"include": "#fixed_pt_literal"
				},
				{
					"include": "#floating_pt_literal"
				},
				{
					"include": "#integer_literal"
				},
				{
					"include": "#wide_character_literal"
				},
				{
					"include": "#character_literal"
				},
				{
					"include": "#wide_string_literal"
				},
				{
					"include": "#string_literal"
				}
			]
		},
		"identifier": {
			"name": "variable.other",
			"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
		},
		"integer_literal": {
			"patterns": [
				{
					"name": "constant.numeric.hex",
					"match": "\\b0[xX][0-9a-fA-F]+(U?LL?|LL?U?)?\\b"
				},
				{
					"name": "constant.numeric.octal",
					"match": "\\b0[0-7]+(U?LL?|LL?U?)?\\b"
				},
				{
					"name": "constant.numeric.decimal",
					"match": "\\b[0-9]+(U?LL?|LL?U?)?\\b"
				}
			]
		},
		"floating_pt_literal": {
			"name": "constant.numeric.float",
			"match": "\\b([0-9]+\\.[0-9]*|\\.[0-9]+)([eE][+-]?[0-9]+)?[fFlL]?\\b|\\b[0-9]+[eE][+-]?[0-9]+[fFlL]?\\b"
		},
		"fixed_pt_literal": {
			"name": "constant.numeric.fixed",
			"match": "\\b([0-9]+\\.[0-9]*|\\.[0-9]+)[dD]\\b|\\b[0-9]+[dD]\\b"
		},
		"character_literal": {
			"name": "string.quoted.single",
			"match": "'([^'\\\\]|\\\\.)'"
		},
		"wide_character_literal": {
			"name": "string.quoted.single.wide",
			"match": "L'([^'\\\\]|\\\\.)'"
		},
		"string_literal": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				}
			]
		},
		"wide_string_literal": {
			"name": "string.quoted.double.wide",
			"begin": "L\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.idl"
}