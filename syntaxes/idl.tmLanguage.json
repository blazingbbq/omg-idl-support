{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "IDL",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#annotations"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#boolean_literal"
		},
		{
			"include": "#literals"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#scoped_name"
		},
		{
			"include": "#identifier"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.idl",
					"match": "//.*$"
				},
				{
					"name": "comment.block.idl",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"annotations": {
			"patterns": [
				{
					"name": "meta.annotation.standard.idl",
					"begin": "@(optional|extensibility|bit_bound|position)\\b",
					"beginCaptures": {
						"0": {
							"name": "storage.type.annotation.standard.idl"
						}
					},
					"end": "(?<=\\))|(?=[;{])|$",
					"patterns": [
						{
							"begin": "\\(",
							"end": "\\)",
							"patterns": [
								{
									"include": "#identifier"
								},
								{
									"include": "#literals"
								},
								{
									"name": "punctuation.separator.idl",
									"match": ","
								}
							]
						}
					]
				},
				{
					"name": "meta.annotation.idl",
					"begin": "@([a-zA-Z_][a-zA-Z0-9_]*)",
					"beginCaptures": {
						"0": {
							"name": "storage.type.annotation.idl"
						}
					},
					"end": "(?<=\\))|(?=[;{])|$",
					"patterns": [
						{
							"begin": "\\(",
							"end": "\\)",
							"patterns": [
								{
									"include": "#identifier"
								},
								{
									"include": "#literals"
								},
								{
									"name": "punctuation.separator.idl",
									"match": ","
								}
							]
						}
					]
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"include": "#declaration_keywords"
				},
				{
					"include": "#type_keywords"
				}
			]
		},
		"declaration_keywords": {
			"name": "keyword.other.idl",
			"match": "\\b(abstract|alias|attribute|bitfield|bitmask|bitset|case|component|connector|const|consumes|context|custom|default|emits|enum|eventtype|exception|factory|finder|getraises|home|import|in|inout|interface|local|manages|map|mirrorport|module|multiple|native|oneway|out|primarykey|private|port|porttype|provides|public|publishes|raises|readonly|setraises|struct|supports|switch|truncatable|typedef|typeid|typename|typeprefix|union|uses|valuetype|void)\\b"
		},
		"type_keywords": {
			"name": "storage.type.idl",
			"match": "\\b(any|boolean|char|double|fixed|float|int8|int16|int32|int64|long|Object|octet|sequence|short|string|uint8|uint16|uint32|uint64|unsigned|ValueBase|wchar|wstring)\\b"
		},
		"boolean_literal": {
			"name": "constant.language.boolean.idl",
			"match": "\\b(TRUE|FALSE)\\b"
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.bitwise.idl",
					"match": "<<|>>|&|\\||\\^|~"
				},
				{
					"name": "keyword.operator.arithmetic.idl",
					"match": "\\+|-|\\*|/|%"
				},
				{
					"name": "keyword.operator.assignment.idl",
					"match": "="
				}
			]
		},
		"scoped_name": {
			"name": "entity.name.type.idl",
			"match": "::?[a-zA-Z_][a-zA-Z0-9_]*((::[a-zA-Z_][a-zA-Z0-9_]*)+)?"
		},
		"literals": {
			"patterns": [
				{
					"include": "#fixed_pt_literal"
				},
				{
					"include": "#floating_pt_literal"
				},
				{
					"include": "#integer_literal"
				},
				{
					"include": "#wide_character_literal"
				},
				{
					"include": "#character_literal"
				},
				{
					"include": "#wide_string_literal"
				},
				{
					"include": "#string_literal"
				}
			]
		},
		"identifier": {
			"name": "variable.other.idl",
			"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
		},
		"integer_literal": {
			"patterns": [
				{
					"name": "constant.numeric.hex.idl",
					"match": "\\b0[xX][0-9a-fA-F]+(U?LL?|LL?U?)?\\b"
				},
				{
					"name": "constant.numeric.octal.idl",
					"match": "\\b0[0-7]+(U?LL?|LL?U?)?\\b"
				},
				{
					"name": "constant.numeric.decimal.idl",
					"match": "\\b[0-9]+(U?LL?|LL?U?)?\\b"
				}
			]
		},
		"floating_pt_literal": {
			"name": "constant.numeric.float.idl",
			"match": "\\b([0-9]+\\.[0-9]*|\\.[0-9]+)([eE][+-]?[0-9]+)?[fFlL]?\\b|\\b[0-9]+[eE][+-]?[0-9]+[fFlL]?\\b"
		},
		"fixed_pt_literal": {
			"name": "constant.numeric.fixed.idl",
			"match": "\\b([0-9]+\\.[0-9]*|\\.[0-9]+)[dD]\\b|\\b[0-9]+[dD]\\b"
		},
		"character_literal": {
			"name": "string.quoted.single.idl",
			"match": "'([^'\\\\]|\\\\.)'"
		},
		"wide_character_literal": {
			"name": "string.quoted.single.wide.idl",
			"match": "L'([^'\\\\]|\\\\.)'"
		},
		"string_literal": {
			"name": "string.quoted.double.idl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.idl",
					"match": "\\\\."
				}
			]
		},
		"wide_string_literal": {
			"name": "string.quoted.double.wide.idl",
			"begin": "L\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.idl",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.idl"
}